<body>
  <div class="form-container">
    <button class="back-button" onclick="goBack()">
      <i class="fas fa-arrow-left"></i> Volver
    </button>
    <h2>Registro de Colaboradores</h2>
    <form id="registerForm">
      <div class="form-row">
        <div class="form-group">
          <label for="fullName">Nombre completo:</label>
          <input type="text" id="fullName" required>
        </div>
        <div class="form-group">
          <label for="idCard">Cédula de identidad:</label>
          <input type="text" id="idCard" required>
        </div>
        <div class="form-group">
          <label for="workCode">Código (ID laboral):</label>
          <input type="text" id="workCode" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="phone">Teléfono:</label>
          <input type="text" id="phone" required>
        </div>
        <div class="form-group">
          <label for="address">Dirección:</label>
          <input type="text" id="address">
        </div>
        <div class="form-group">
          <label for="department">Departamento:</label>
          <input type="text" id="department" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="position">Posición:</label>
          <input type="text" id="position" required>
        </div>
        <div class="form-group">
          <label for="workArea">Área de trabajo:</label>
          <input type="text" id="workArea" required>
        </div>
        <div class="form-group">
          <label for="profileImage">Imagen de perfil:</label>
          <button type="button" class="upload-button" onclick="document.getElementById('profileImage').click()">
            <i class="fas fa-camera"></i> Subir imagen
          </button>
          <input type="file" id="profileImage" accept="image/*" style="display: none;">
          <div class="image-preview">
            <img id="profilePreview" src="#" alt="Vista previa de la imagen de perfil" style="display: none;">
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="idCardImage">Foto o copia de cédula (jpg, png, pdf):</label>
          <button type="button" class="upload-button" onclick="document.getElementById('idCardImage').click()">
            <i class="fas fa-file-upload"></i> Subir archivo
          </button>
          <input type="file" id="idCardImage" accept=".jpg, .png, .pdf" style="display: none;">
          <div class="file-preview">
            <img id="idCardPreview" src="#" alt="Vista previa de la cédula" style="display: none;">
            <a id="idCardLink" href="#" target="_blank" style="display: none;">Ver archivo</a>
          </div>
        </div>
      </div>
      <button type="submit">Registrar Colaborador</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.3/firebase-app.js";
    import { getFirestore, collection, addDoc, getDocs, query, where } from "https://www.gstatic.com/firebasejs/10.12.3/firebase-firestore.js";
    import { getStorage, ref, uploadBytes, getDownloadURL } from "https://www.gstatic.com/firebasejs/10.12.3/firebase-storage.js";

    const firebaseConfig = {
      apiKey: "AIzaSyDLi-egzQlgbKW8XV_qIhU6313Gd8gocCg",
      authDomain: "inventario-35d6b.firebaseapp.com",
      databaseURL: "https://inventario-35d6b-default-rtdb.firebaseio.com",
      projectId: "inventario-35d6b",
      storageBucket: "inventario-35d6b.appspot.com",
      messagingSenderId: "266100399659",
      appId: "1:266100399659:web:92358d28cbd803c8a7d46e"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);
    const storage = getStorage(app);

    document.getElementById('profileImage').addEventListener('change', function (event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          document.getElementById('profilePreview').src = e.target.result;
          document.getElementById('profilePreview').style.display = 'block';
        };
        reader.readAsDataURL(file);
      }
    });

    document.getElementById('idCardImage').addEventListener('change', function (event) {
      const file = event.target.files[0];
      if (file) {
        if (file.type === 'application/pdf') {
          document.getElementById('idCardPreview').style.display = 'none';
          document.getElementById('idCardLink').href = URL.createObjectURL(file);
          document.getElementById('idCardLink').style.display = 'block';
        } else {
          const reader = new FileReader();
          reader.onload = function (e) {
            document.getElementById('idCardPreview').src = e.target.result;
            document.getElementById('idCardPreview').style.display = 'block';
            document.getElementById('idCardLink').style.display = 'none';
          };
          reader.readAsDataURL(file);
        }
      }
    });

    document.getElementById('registerForm').addEventListener('submit', async function (event) {
      event.preventDefault();

      const fullName = document.getElementById('fullName').value;
      const idCard = document.getElementById('idCard').value;
      const workCode = document.getElementById('workCode').value;
      const phone = document.getElementById('phone').value;
      const address = document.getElementById('address').value;
      const department = document.getElementById('department').value;
      const position = document.getElementById('position').value;
      const workArea = document.getElementById('workArea').value;
      const profileImage = document.getElementById('profileImage').files[0];
      const idCardImage = document.getElementById('idCardImage').files[0];

      const idCardQuery = query(collection(db, "FormularioDeSeguridad"), where("idCard", "==", idCard));
      const idCardSnapshot = await getDocs(idCardQuery);

      if (!idCardSnapshot.empty) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Ya existe un colaborador con esta cédula de identidad.',
          background: '#2c3e50',
          color: '#fff',
          confirmButtonColor: '#15a086'
        });
        return;
      }

      Swal.fire({
        title: 'Registrando colaborador...',
        text: 'Por favor, espera.',
        allowOutsideClick: false,
        didOpen: () => {
          Swal.showLoading();
        },
        background: '#2c3e50',
        color: '#fff',
        confirmButtonColor: '#15a086'
      });

      try {
        let profileImageUrl = "";
        if (profileImage) {
          const profileImageRef = ref(storage, `profileImages/${profileImage.name}`);
          const profileSnapshot = await uploadBytes(profileImageRef, profileImage);
          profileImageUrl = await getDownloadURL(profileSnapshot.ref);
        }

        let idCardImageUrl = "";
        if (idCardImage) {
          const idCardImageRef = ref(storage, `idCardImages/${idCardImage.name}`);
          const idCardSnapshot = await uploadBytes(idCardImageRef, idCardImage);
          idCardImageUrl = await getDownloadURL(idCardSnapshot.ref);
        }

        await addDoc(collection(db, "FormularioDeSeguridad"), {
          fullName,
          idCard,
          workCode,
          phone,
          address,
          department,
          position,
          workArea,
          profileImageUrl,
          idCardImageUrl
        });

        Swal.fire({
          icon: 'success',
          title: 'Éxito',
          text: 'Colaborador registrado exitosamente.',
          background: '#2c3e50',
          color: '#fff',
          confirmButtonColor: '#15a086'
        });
        document.getElementById('registerForm').reset();
        document.getElementById('profilePreview').style.display = 'none';
        document.getElementById('idCardPreview').style.display = 'none';
        document.getElementById('idCardLink').style.display = 'none';
      } catch (error) {
        console.error("Error al registrar el colaborador:", error);
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Hubo un error al registrar el colaborador. Inténtalo de nuevo.',
          background: '#2c3e50',
          color: '#fff',
          confirmButtonColor: '#15a086'
        });
      }
    });

    function goBack() {
      window.history.back();
    }
  </script>
</body>
</html>
